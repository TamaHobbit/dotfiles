{
  "configurations": {
    "ada lldb": {
      "adapter": "CodeLLDB",
      "variables": {
        "GprMains": {
          "shell" : [ "select_ada_main", "${workspaceRoot}", "${fileBasenameNoExtension}" ]
        }
      },
      "configuration": {
        "request": "launch",
        "program": [ "*${GprMains}" ],
        "stopOnEntry": true,
        "initCommands": ["script import math"]
      }
    }
  }
}
